
  <h1> New Game </h1>

  <div class="container">
  <h3 class="wrapper">
    <% @letters.each do |letter| %>
    <p class = "letters"> <%= letter %> <p>
    <% end %>
  </h3>

    <p class="ask-submit">What's the longest word you can find?</p>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid_letters, @letters %>

      <input type="text" class="form" name="submit_answer">
      <input type="submit">
    </form>
  </div>
